Config { font = "xft:Bitstream Vera Sans Mono:size=14:bold:antialias=true"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
	, lowerOnStart = True
        , commands = [ Run Weather "KSLC" ["-t","<tempF>f","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                        , Run Network "wlp2s0" ["-L","0","-H","32","--normal","green","--high","red"] 10			
                        , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Memory ["-t","Mem: <usedratio>%"] 10
                        , Run Swap [] 10
			, Run Battery ["Bat0"] 600
                        , Run Com "uname" ["-s","-r"] "" 36000
                        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                        , Run StdinReader
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% | %cpu% | %memory% * %swap% | %wlp2s0% | {<fc=#ee9a00>%date%</fc> | %uname% | %KSLC% | %battery%"

}
